<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.ViewWalletFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="My Wallets"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_button"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_below="@+id/my_wallet"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_medium"
            android:text="Delete"
            android:textColor="@color/green_primary"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_button"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_below="@+id/my_wallet"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_medium"
            android:text="View"
            android:textColor="@color/green_primary"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_button_button"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_below="@+id/my_wallet"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="120dp"
            android:layout_toStartOf="@+id/delete_button"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_medium"
            android:text="Add"
            android:textColor="@color/green_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_button_button"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wallet_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_marginHorizontal="12dp"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>