<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AddWalletActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13A243"
    tools:context=".views.fragments.AddWalletFragment">

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/delete"
        android:contentDescription="Close Button" />

    <TextView
        android:id="@+id/add_wallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/close_button"
        android:layout_alignTop="@id/close_button"
        android:layout_marginStart="8dp"
        android:text="Add Wallet"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/wallet_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/add_wallet_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/gopay"
        android:contentDescription="Wallet Icon" />

    <TextView
        android:id="@+id/wallet_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_icon"
        android:layout_alignTop="@id/wallet_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/wallet_icon"
        android:text="Wallet Name"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/wallet_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_name_label"
        android:layout_alignTop="@id/wallet_icon"
        android:layout_marginStart="17dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@id/wallet_icon"
        android:backgroundTint="@android:color/white"
        android:hint="Enter wallet name"
        android:textColorHint="@android:color/darker_gray"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/initial_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_name_input"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:text="Initial Balance"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/initial_balance_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/initial_balance_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/white"
        android:hint="Enter initial balance"
        android:inputType="numberDecimal"
        android:textColorHint="@android:color/darker_gray" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/initial_balance_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button"
        android:text="Add"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#04862F"/>

</RelativeLayout>
