<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.TransferWalletFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/transferWalletHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/delete" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wallet Transfer"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutFromWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/transferWalletHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textFromWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Wallet"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/fromWalletSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:backgroundTint="@android:color/white"
                android:padding="12dp"
                android:hint="From Wallet"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layouToWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutFromWallet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textToWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Wallet"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/toWalletSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/montserrat_regular"
                android:padding="12dp"
                android:hint="To Wallet"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layouToWallet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:fontFamily="@font/montserrat_regular"
                android:backgroundTint="@android:color/white"
                android:inputType="numberDecimal"
                android:textColor="@android:color/black"
                android:padding="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAdminFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textAdminFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Fee (Empty if none)"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/adminFeeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin Fee (Empty if none)"
                android:fontFamily="@font/montserrat_regular"
                android:backgroundTint="@android:color/white"
                android:inputType="numberDecimal"
                android:textColor="@android:color/black"
                android:padding="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="An expense transaction will be automatically created on the source (from) wallet if there is admin fee"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintTop_toBottomOf="@id/layoutAdminFee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/transferButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/montserrat_bold"
            android:text="Transfer"
            android:textSize="16dp"
            android:textColor="#04862F"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>