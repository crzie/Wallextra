<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.AddTransactionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#13A243"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/addTransactionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/delete" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Transaction"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/addTransactionHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction name"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/transactionNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Short description of your transaction"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:fontFamily="@font/montserrat_regular"
                android:padding="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Type"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/transactionTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:padding="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="numberDecimal"
                android:textColor="@android:color/black"
                android:padding="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/walletSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:padding="12dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:text="Add"
            android:textSize="16dp"
            android:textColor="#04862F"
            android:fontFamily="@font/montserrat_bold"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutWallet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>